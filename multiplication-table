#include <stdio.h>

int main(void) {

	int start = 0;
	int x = 0;
	int mult = 0;
	
	do {		
		printf("enter a number: ");
		scanf("%d", &start);
		if (start<0) printf("number should be <0\n");
		else if (start>10) printf("number should be >10\n");
	} 
	while (start<0 || start>10);
	
	
	while (x <= 10)
	{
		mult = start * x;
		printf("%d x %d = %d\n",start, x, mult);
		x += 1;
	}

	return 0;
}
